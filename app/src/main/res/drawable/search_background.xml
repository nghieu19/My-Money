<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền sáng nhẹ để khung nổi bật trên nền trắng -->
    <solid android:color="#F5F5F5" />

    <!-- Bo góc mềm mại -->
    <corners android:radius="12dp" />

    <!-- Viền xám nhạt giúp tách nhẹ khỏi nền -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Padding để chữ/icon không dính mép -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
