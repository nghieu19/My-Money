<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with back button and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/mint_green"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <!-- Back button -->
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_backward"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@color/black" />

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_wallet"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center" />

            <!-- Save/Done button -->
            <ImageView
                android:id="@+id/btn_save"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_purse_tick"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@color/black" />

        </LinearLayout>

        <!-- Wallet Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Wallet Info Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_info"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp" />

            <!-- Wallet Name Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <!-- Wallet icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_wallet_name"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/black" />

                <!-- Wallet name label -->
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/wallet_name"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="16dp" />

                <!-- Wallet name input -->
                <EditText
                    android:id="@+id/et_wallet_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/enter_account_name"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_text"
                    android:background="@android:color/transparent"
                    android:textAlignment="textEnd"
                    android:inputType="text" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="24dp" />

            <!-- Balance Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <!-- Coins icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_coin_bundle"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/black" />

                <!-- Balance label -->
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/balance"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="16dp" />

                <!-- Balance input -->
                <EditText
                    android:id="@+id/et_balance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/enter_amount2"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_text"
                    android:background="@android:color/transparent"
                    android:textAlignment="textEnd"
                    android:inputType="numberDecimal" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="24dp" />

            <!-- Currency Field -->
            <LinearLayout
                android:id="@+id/layout_currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:layout_marginBottom="24dp">

                <!-- Dollar icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_dollar_coin"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/black" />

                <!-- Currency label -->
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/currency"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="16dp" />

                <!-- Currency selection -->
                <TextView
                    android:id="@+id/tv_currency"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/select_currency"
                    android:textSize="16sp"
                    android:textColor="@color/gray_text"
                    android:textAlignment="textEnd" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="32dp" />

            <!-- Note Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/note"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Note Input -->
            <EditText
                android:id="@+id/et_note"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="@string/write_note_here"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_text"
                android:background="@android:color/transparent"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:padding="0dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>